<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro" >
    <link name="base_arm_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1 1 1" />
            </material>
        </visual>
        
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />

        </inertial>
    </link>


    <link name="arm0_link">
        <visual>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.3" radius="0.02" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1 1 1" />
            </material>
        </visual>
        
        <collision>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.1" radius="0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
        </inertial>
    </link>

    <link name="arm1_link">
        <visual>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.3" radius="0.02" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1 1 1" />
            </material>
        </visual>
        
        <collision>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.3" radius="0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />

        </inertial>
    </link>

    <joint name="base_base_arm_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_arm_link"/>
        <origin xyz="0.2 0 0.2" rpy="0 0 0"/>
    </joint>

    <joint name="base_arm_arm0_joint" type="revolute">
        <parent link="base_arm_link" />
        <child link="arm0_link" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <dynamics damping="0.3" friction="0.3" />
        <limit lower="0" upper="1.57" effort="100" velocity="1.0" />
    </joint>

    <joint name="arm0_arm1_joint" type="revolute">
        <parent link="arm0_link" />
        <child link="arm1_link" />
        <origin xyz="0 0 0.3" rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <dynamics damping="0.3" friction="0.3" />
        <limit lower="0" upper="1.57" effort="100" velocity="1.0" />
    </joint>

    <gazebo>
        <plugin name="gz::sim::systems::JointPositionController" filename="gz-sim-joint-position-controller-system">
            <joint_name>base_arm_arm0_joint</joint_name>
            <p_gain>5.0</p_gain>
        </plugin>
    </gazebo>   

    <gazebo>
        <plugin name="gz::sim::systems::JointPositionController" filename="gz-sim-joint-position-controller-system">
            <joint_name>arm0_arm1_joint</joint_name>
            <p_gain>3.0</p_gain>
        </plugin>
    </gazebo>   

    <gazebo>
        <plugin name = "gz::sim::systems::JointStatePublisher" filename="gz-sim-joint-state-publisher-system">
            <joint_name>base_arm_arm0_joint</joint_name>
            <joint_name>arm0_arm1_joint</joint_name>
        </plugin>
    </gazebo>

</robot>